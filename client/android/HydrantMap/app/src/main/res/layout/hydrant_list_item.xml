<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_selector">

    <RelativeLayout
        android:id="@+id/hydrant_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="15.0dip"
        >

        <TextView
            android:id="@+id/hydrant_item_scope"
            android:layout_width="33.0dip"
            android:layout_height="20.0dip"
            android:background="@color/textcolor11"
            android:gravity="center"
            android:singleLine="true"
            android:text="4S"
            android:textColor="@color/textcolor09"
            android:textSize="@dimen/font01"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/hydrant_item_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/hydrant_item_scope"
            android:layout_toRightOf="@id/hydrant_item_scope"
            android:singleLine="true"
            android:text="水源编号: "
            android:textColor="@color/textcolor04"
            android:textSize="@dimen/font05"/>

        <TextView
            android:id="@+id/hydrant_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/hydrant_item_scope"
            android:layout_toRightOf="@id/hydrant_item_name_title"

            android:singleLine="true"
            android:text="title"
            android:textColor="@color/textcolor04"
            android:textSize="@dimen/font05"/>

        <TextView
            android:id="@+id/hydrant_item_location_desc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hydrant_item_name"
            android:paddingRight="5.0dip"
            android:text="详细位置: "
            android:textColor="@color/textcolor01"
            android:textSize="@dimen/font05"

            />

        <TextView
            android:id="@+id/hydrant_item_location_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hydrant_item_name"
            android:layout_toRightOf="@id/hydrant_item_location_desc_title"
            android:paddingRight="5.0dip"
            android:textColor="@color/textcolor01"
            android:textSize="@dimen/font05"

            />

        <TextView
            android:id="@+id/hydrant_item_water_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_toLeftOf="@id/hydrant_item_name"
            android:gravity="right"
            android:paddingRight="5.0dip"
            android:text="MPa"
            android:textColor="@color/textcolor01"
            android:textSize="@dimen/font05"/>

        <TextView
            android:id="@+id/hydrant_item_state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/hydrant_item_water_pressure"
            android:layout_toRightOf="@id/hydrant_item_name"
            android:gravity="right"
            android:paddingRight="5.0dip"
            android:text="状态"
            android:textColor="@color/textcolor01"
            android:textSize="@dimen/font05"/>

        <TextView
            android:id="@+id/hydrant_item_unit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hydrant_item_location_desc"
            android:paddingRight="5.0dip"
            android:singleLine="true"
            android:text="辖区中队: "
            android:textColor="@color/textcolor01"
            android:textSize="@dimen/font05"
            />

        <TextView
            android:id="@+id/hydrant_item_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hydrant_item_location_desc"
            android:layout_toRightOf="@id/hydrant_item_unit_title"
            android:paddingRight="5.0dip"
            android:singleLine="true"
            android:textColor="@color/textcolor01"
            android:textSize="@dimen/font05"
            />

        <TextView
            android:id="@+id/hydrant_item_district_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hydrant_item_unit"
            android:paddingRight="5.0dip"
            android:singleLine="true"
            android:text="行政区域: "
            android:textColor="@color/textcolor01"
            android:textSize="@dimen/font05"
            />

        <TextView
            android:id="@+id/hydrant_item_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hydrant_item_unit"
            android:layout_toRightOf="@id/hydrant_item_district_title"
            android:paddingRight="5.0dip"
            android:singleLine="true"
            android:textColor="@color/textcolor01"
            android:textSize="@dimen/font05"
            />

        <TextView
            android:id="@+id/hydrant_item_maintenance_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hydrant_item_district"
            android:paddingRight="5.0dip"
            android:singleLine="true"
            android:text="维护日期: "
            android:textColor="@color/textcolor01"
            android:textSize="@dimen/font05"
            />

        <TextView
            android:id="@+id/hydrant_item_maintenance_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hydrant_item_district"
            android:layout_toRightOf="@id/hydrant_item_maintenance_date_title"
            android:paddingRight="5.0dip"
            android:singleLine="true"
            android:textColor="@color/textcolor01"
            android:textSize="@dimen/font05"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hydrant_item_maintenance_date"
            android:layout_below="@+id/hydrant_item_unit"
            android:layout_toRightOf="@id/hydrant_item_maintenance_date"
            android:orientation="horizontal"
            android:gravity="right|bottom"
            >

            <TextView
                android:id="@+id/hydrant_item_edit_pencil"
                android:layout_width="25.0sp"
                android:layout_height="25.0sp"
                android:drawableRight="@drawable/pencil"
                android:textColor="@color/textcolor01"
                android:textSize="@dimen/font05"
                android:layout_marginRight="@dimen/font05"
                />

            <TextView
                android:id="@+id/hydrant_item_qrcode"
                android:layout_width="25.0sp"
                android:layout_height="25.0sp"
                android:drawableRight="@drawable/qrcodethumb"
                android:textColor="@color/textcolor01"
                android:textSize="@dimen/font05"
                android:gravity="right"
                />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
